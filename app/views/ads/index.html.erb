
<div class="header">
  <h1>Transport huren bij je buren?</h1>
  <h3>Geschikt vervoer voor grote spullen</h3>

  <div class="row">
      <%= search_form_for @search do |f| %>
        <div class="field">
          <%= f.text_field :location_cont, placeholder: "Waar zoek je vervoer?", :class => "form-control placesearch" %>

          <%= f.select(:categorie_cont, options_for_select([['Kies je vervoersmiddel'],['Aanhanger'], ['Auto']]), {}, {class: "form-control categoriesearch"}) %>
        </div>
        <%= f.submit "zoeken", :class => "btn btn-primary" %>
      <% end %>
  </div>
</div>



  Er zijn <%= @ads.count %> aanhangwagens gevonden

  <div class="dropdown navbar-right">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      Filter op
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
      <li><a href="#">Prijs</a></li>
      <li><a href="#">Afstand</a></li>
      <li><a href="#">Beoordeling</a></li>
    </ul>
  </div>
<div class="row">
  <div class="col-md-3 filter-sidebar">


                    <h4>Prijs per dag</h4>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-6">
                                <input name="ctl00$body$MinimumPriceTextbox" type="text" id="MinimumPriceTextbox" class="form-control" title="Van" placeholder="Van">
                            </div>
                            <div class="col-xs-6">
                                <input name="ctl00$body$MaximumPriceTextbox" type="text" id="MaximumPriceTextbox" class="form-control" title="Tot" placeholder="Tot">
                            </div>
                        </div>
                    </div>

                    <h4>Filter op rijbewijs</h4>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-6">
                              <div class="checkbox">
                                <label><input type="checkbox" value="">Rijbewijs B</label>
                              </div>
                              <div class="checkbox">
                                <label><input type="checkbox" value="">Rijbewijs B+</label>
                              </div>
                              <div class="checkbox ">
                                <label><input type="checkbox" value="">Rijbewijs BE</label>
                              </div>
                            </div>
                        </div>
                    </div>


                </div>

  <div class="ads">
    <% @ads.each do |ad| %>
      <div class="col-xs-6 col-sm-3 ad">
        <%= image_tag ad.image.url(:medium) %>
          <h4><%= link_to ad.title, ad_path(ad) %></h4>
          <p> Afmeting <%= ad.size %></p>
          <p> Laadvermogen <%= ad.capacity %></p>

          <p> <%= ad.location %></p>

       <div class="average-review-rating" data-score=<%= @average_review %>>
       </div><p><%= ad.reviews.count%> recensies</p>

      </div>
    <% end %>
  </div>

</div>




    <script>
      $('#rating-form').raty({
        path: '/assets/',
        scoreName: 'review[rating]'
      });
    </script>
</div>

<script>
  $('.review-rating').raty({
    readOnly: true,
    score: function(){
      return $(this).attr('data-score');
    },
    path: '/assets/'
  })
</script>

<script>
  $('.average-review-rating').raty({
    readOnly: true,
    path: '/assets/',
    score: function() {
      return $(this).attr('data-score')
    }
  })
</script>
