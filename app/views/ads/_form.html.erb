<%= simple_form_for @ad, html: { multipart: true } do |f| %>
  <%= f.label :categorie %>
  <%= f.select :categorie, ['Aanhanger', 'Auto'] %>
  <%= f.input :title %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :brand %>
  <%= f.input :license %>
  <%= f.input :plug %>
  <%= f.input :size %>
  <%= f.input :capacity %>
  <%= f.input :restrictions %>
  <%= f.input :transmission %>
  <%= f.input :year %>
  <%= f.input :engine %>
  <%= f.input :fuel %>
  <%= f.button :submit %>
<% end %>
